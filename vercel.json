{
  "version": 2,
  "builds": [
    { 
      "src": "src/api/index.ts", 
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "src/api/index.ts" }
  ],
  "functions": {
    "src/api/index.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
